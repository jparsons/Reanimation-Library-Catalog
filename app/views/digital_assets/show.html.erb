<% title "Image" %>

<p>
  <strong>Item:</strong>
  <%= content_tag "h2", link_to(@digital_asset.item.title, item_path(@digital_asset.item)) %>
</p>
<p>
  <strong>Scan:</strong><br />
  <%= image_tag(@digital_asset.scan.url(:large)) %><br/>
</p>
<p>
  <strong>Color:</strong>
  <%=h @digital_asset.color %>
</p>
<p>
  <strong>Image Type:</strong>
  <%=h @digital_asset.image_type %>
</p>
<p>
  <strong>Subjects:</strong><br />
  <% @digital_asset.digital_asset_subjects.each do |s| %>
  <%= s.name %><%= "(#{s.authority})" unless s.authority.blank? %><br />
  <% end %>

<p>
  <%= link_to "Edit", edit_digital_asset_path(@digital_asset) %> |
  <%= link_to "Destroy", @digital_asset, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", digital_assets_path %>
</p>
