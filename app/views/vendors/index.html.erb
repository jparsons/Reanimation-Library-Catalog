<% title "Vendors" %>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th></th>
    <th></th>
  </tr>
  <% for vendor in @vendors %>
    <tr>
      <td><%=h vendor.name %></td>
      <td><%=h vendor.city %></td>
      <td><%=h vendor.state %></td>
      <td><%= link_to "Edit", edit_vendor_path(vendor), :class => 'btn' %></td>
      <td><%= link_to "Destroy", vendor, :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Vendor", new_vendor_path, :class => 'btn' %></p>
