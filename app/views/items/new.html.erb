
<% title "New Item Acquisition" %>
<h1>New Item Acquisition</h1>

<% form_for @item do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :subtitle, "Sub-Title" %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :collection %><br />
    <%= f.select :collection_name, COLLECTIONS, :include_blank=>true %>	
  </p>
<%= render :partial => 'acquisition_form', :locals=>{:f=>f} %>
  <p><%= f.submit "Submit" %></p>
<% end %>
