<h2>Users</h2>
<table>
	<tr>
		<th>Username</th><th>Authorization level</th>
	</tr>
<% for user in @users %>
<tr>
  <td><%= user.username %></td><td><%= user.role %></td><td><%= link_to 'edit', edit_user_path(user) %></td><td><%= link_to "delete", user, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'add a new user', new_user_path %>