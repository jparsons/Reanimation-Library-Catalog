<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2 Final//EN">
<html>
<head>
<title>Catalog Administration <%= yield(:title) %></title>
<%= javascript_include_tag 'jquery', 'application' %>
<%= stylesheet_link_tag 'application.css', 'admin.css' %>
<link rel="shortcut icon" href="<%= image_path "nav/logo.ico"%>">
<%= yield(:head) %>
</head>
<body>
<div id="header">

</div>
<div id="page">
<div id="sidebar-menu">
	<div class="sidebar-menu-item">
		<% form_tag search_path, :method=>:get, :id=>"search_form" do %>
			<%= text_field_tag 'q', params[:q], :class=>'sidebar', :value=>params[:q] || "search the catalog" %>&nbsp;
			<%= link_to 'go', "", :class=>"submit-button" %>
			<% end %>	
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'browse the catalog by title', items_path %>
	</div>
	<div class="sidebar-menu-item">	
		<%= link_to 'browse images', digital_assets_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'browse subjects', subjects_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'exhibitions involving the collection', exhibitions_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'art works made from the collection', works_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'log in', login_path %>
	</div>
</div>
<div id="content">		
	<%- flash.each do |name, msg| -%>  	
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<%- end -%>
	<%= yield %>
</div>
</div>	

</body>
</html>
