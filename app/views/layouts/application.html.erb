<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2 Final//EN">
<html>
<head>
<title><%= yield(:title) || "Catalog" %></title>
<%= javascript_include_tag 'jquery', 'application', 'jquery.colorbox-min' %>
<%= stylesheet_link_tag 'application.css', 'colorbox' %>
<link rel="shortcut icon" href="<%= image_path "nav/logo.ico"%>">
<%= yield(:head) %>
</head>
<body>
<div id="header">

</div>
<div id="page">
<div id="sidebar-menu">
	<div class="sidebar-menu-item">
		<% form_tag search_path, :method=>:get, :id=>"search_form" do %>
			<%= text_field_tag 'q', params[:q], :class=>'sidebar', :value=>params[:q] || "search the catalog" %>&nbsp;
			<%= link_to 'go', "", :class=>"submit-button" %>
			<% end %>	
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'browse the catalog by title', items_path %>
	</div>
	<div class="sidebar-menu-item">	
		<%= link_to 'browse images', digital_assets_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'browse subjects', subjects_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'exhibitions', exhibitions_path %>
	</div>
	<div class="sidebar-menu-item">
		<%= link_to 'art works', works_path %>
	</div>
	<% if logged_in? && current_user.is_administrator? %>
	<div class="sidebar-admin-menu">
		<div class="sidebar-menu-item">
			<%= link_to "add a new item", new_item_path %>
		</div>		
		<div class="sidebar-menu-item">
			<%= link_to 'log out', logout_path %>
		</div>
	</div>
	<% else %>
	<div class="sidebar-menu-item">
		<%= link_to 'log in', login_path %>
	</div>
	<% end %>
</div>
<div id="content">		
	<%- flash.each do |name, msg| -%>  	
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<%- end -%>
	<%= yield %>
</div>
</div>	

</body>
</html>
